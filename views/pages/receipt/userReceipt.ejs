<div class="bcm_view-recipt">
   <div class="container">
      <h2>View Receipts:</h2>
      <% if (userReceipt.length) { %>
         <% userReceipt.map((result)=>{%>
               <table class="table table-responsive table-bordered user-recept-view">
                  <thead>
                     <tr>
                        <th>Full Name</th>
                        <th>Amount</th>
                        <th>Phone</th>
                        <th>Address</th>
                        <th>Occasion</th>
                        <th>familyMembers</th>
                        <th>image</th>
                     </tr>
                  </thead>
                  <tbody>
                     <tr>
                           <td>
                              <span>
                              <%=result.fullName%>
                              </span>
                           </td>
                           <td>
                              <span>
                              <%=result.amount%>
                              </span>
                           </td>
                           <td>
                              <span>
                              <%=result.phone%>
                              </span>
                           </td>
                           <td>
                              <span>
                              <%=result.address%>
                              </span>
                           </td>
                           <td>
                              <span>
                              <%=result.occasion%>
                              </span>
                           </td>
                           <td>
                              <span>
                              <%=result.familyMembers%>
                              </span>
                           </td>
                           <td>
                              <span><img src="<%=result.image%>" class="img-responsive"
                                 id="image"></span>
                           </td>
                     </tr>
                  </tbody>
               </table>
         <% }) %>
      <% } else { %>
      <p>No Receipts!</p>
      <% } %>
   </div>
</div>