<div class="bcm_view-recipt">
   <div class="container">
      <h2>View Receipts:</h2>
      <% if (userReceipt.length) { %>
      <ul>
         <% userReceipt.map((result)=>{%>
         <li class="todo">
            <label>
               <table class="table table-responsive table-bordered">
                  <thead>
                     <tr>
                        <th></th>
                        <th>Full Name</th>
                        <th>Amount</th>
                        <th>Phone</th>
                        <th>Address</th>
                        <th>Occasion</th>
                        <th>familyMembers</th>
                        <th>image</th>
                     </tr>
                  </thead>
                  <tbody>
                     <tr>
                           <td>
                              <input type="checkbox" name="completed">
                           </td>
                           <td style="max-width:150px;">
                              <span>
                              <%=result.fullName%>
                              </span>
                           </td>
                           <td>
                              <span>
                              <%=result.amount%>
                              </span>
                           </td>
                           <td>
                              <span>
                              <%=result.phone%>
                              </span>
                           </td>
                           <td style="max-width:200px;">
                              <span style="max-width:200px;">
                              <%=result.address%>
                              </span>
                           </td>
                           <td>
                              <span>
                              <%=result.occasion%>
                              </span>
                           </td>
                           <td>
                              <span>
                              <%=result.familyMembers%>
                              </span>
                           </td>
                           <td>
                              <span><img src="<%=result.image%>" class="img-responsive"
                                 id="image"></span>
                           </td>

                     </tr>
                  </tbody>
               </table>
            </label>
         </li>
         <% }) %>
      </ul>
      <% } else { %>
      <p>No Receipts!</p>
      <% } %>
   </div>
</div>