
<div class="create_receipt">
    <div class="container">
      <% if(typeof alert != 'undefined') { %>
         <% alert.forEach(function(error) { %>
             <div class="alert alert-warning" role="alert">
                 <%= error.msg %>
                 <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                   <span aria-hidden="true">Ã—</span>
                 </button>
               </div>
         <% }) %>
      <% } %>
          
      <form action="/createEvent" method="POST" enctype="multipart/form-data">
          <h2>Create a new Event:</h2>
          <div class="form-group">
             <input type="text" class="form-control" placeholder="Event Name" name="name">
          </div>
          <div class="form-group">
             <input type="text" class="form-control" placeholder="Description" name="description">
          </div>
          <div class="form-group">
             <input type="text" class="form-control" placeholder="Amount" name="price">
          </div>
          <div class="form-group">
             <input type="text" class="form-control" placeholder="Location" name="location" > 
          </div>
          <div class="form-group">
             <input type="text" class="form-control" placeholder="Contact Person" name="arragedBy">
          </div>      
         <div class="form-group">
            <input id="datetimepicker" class="form-control kendo-datePic" name="time"/> 
         </div>
         <div class="form-group from-group-label-right">
            <input class="form-control" type="file" name="image" id="image"required>
            <label for="image">Only png & jpg is allowed</label>
         </div>
          <button type="submit" class="btn bcm-btn-red">Create</button>
       </form>
    </div>
 </div>
 
<script src="http://code.jquery.com/jquery-1.9.1.min.js"></script>
<script src="http://cdn.kendostatic.com/2013.2.716/js/kendo.all.min.js"></script>
 <script>

$("#datetimepicker").kendoDateTimePicker({
    value: new Date(),
    dateInput: true,
    format: "dd/MM/yyyy hh:mm tt"
  });
</script>