<% if(message.roleUpdateSuccess){ %>
   <div class="alert alert-success" role="alert" id="successMessage">
       <%= message.roleUpdateSuccess %>
       <button type="button" class="close" data-dismiss="alert" aria-label="Close">
         <span aria-hidden="true">Ã—</span>
   </div>
   <% } %>
<div class="change-role">
   <div class="container">
      <h2>Change User Role:</h2>
      <% users.map((result, index)=>{%>
      <table class="table table-responsive table-bordered add_role-table">
         <thead>
            <tr>
               <th>S.no</th>
               <th class="hidden">Id</th>
               <th>Name</th>
               <th>Role</th>
               <th>Update</th>
            </tr>
         </thead>
         <tbody>
            <tr>
               <td>
                  <span class="">
                  <%=index%>
                  </span>
               </td>
               <td class="hidden">
                  <span class="">
                  <%=result._id%>
                  </span>
               </td>
               <td>
                  <span class="">
                  <%=result.name%>
                  </span>
               </td>
               <td>
                  <span class="">
                  <%=result.role%>
                  </span>
               </td>
               <td>
                  <button class="btn btn-success" data-toggle="modal" data-target="#changeRole<%=result._id%>"> <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> </button>
                  <!-- Modal -->
                  <div id="changeRole<%=result._id%>" class="modal fade" role="dialog">
                     <div class="modal-dialog">
                        <!-- Modal content-->
                        <div class="modal-content">
                           <div class="modal-header">
                              <button type="button" class="close" data-dismiss="modal">&times;</button>
                              <h4 class="modal-title">Update Roles</h4>
                           </div>
                           <div class="modal-body">
                              <p><%=result.name%></p>
                              <form action="/updateUserRole" method="POST">
                                 <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Role" name="role" value="<%=result.role%>" required>
                                 </div>
                                 <div class="form-group">
                                    <input type="hidden" value="<%=result._id%>" name="id">
                                    <button class="btn btn-small bcm-btn-red"  type="submit">update</button>
                                 </div>
                              </form>
                           </div>
                        </div>
                     </div>
                  </div>
               </td>
            </tr>
         </tbody>
      </table>
      <% }) %>
      <!-- <% users.map((result2)=>{%> -->
      <!-- <% }) %> -->
   </div>
</div>
<script type="text/javascript">
   setTimeout(function () {
       // Closing the alert
       $(' #successMessage').alert('close');
   },3000);
</script>